@model IEnumerable<CarInsurance.Models.Insuree>
@{
    ViewBag.Title = "Admin Page";
}


<div class="row no-gutters m-3 text-center">
    <div class="card col-sm-12 col-md-10 col-lg-6 mx-auto shadow">
        <div class="card-header text-center">
            <h3 class="m-0 text-center">Customers' Quotes</h3>
        </div>

        <table class="table">
            <tr>
                <td>First Name</td>
                <td>Last Name</td>
                <td>Quote</td>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.FirstName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LastName)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.Quote)
                    </td>

                </tr>

            }
        </table>
    </div>
</div>
<div class="text-center">
    <button class="btn btn-light btn-lg">@Html.ActionLink("See more deatils", "Indexe", "Insuree")</button>
    <button class="btn btn-light btn-lg">@Html.ActionLink("Create new quote for customer", "Create", "Insuree")</button>
</div>